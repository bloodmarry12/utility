[core]
        editor = vim
        filemode = false
        quotepath = false

[alias]
        ci = commit -a
        st = status
        co = checkout

[log]
        date = local

[color]
        status = auto
        branch = auto
        diff = auto
        ui = true
        pager = true

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold

[color "status"]
        added = yellow
        changed = green
        untracked = cyan
